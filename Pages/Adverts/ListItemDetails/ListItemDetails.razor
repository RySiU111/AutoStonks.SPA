<div class="row justify-content-left">
    <div class="col-12">
        <Heading Size="HeadingSize.Is4">@Item?.Title</Heading>
        <Heading Size="HeadingSize.Is5">@Item?.Generation?.Model?.Brand?.Name @Item?.Generation?.Model?.Name @Item?.Generation?.Name</Heading>
    </div>
    <div class="col-12">
        <Badge Color="Color.Secondary">@Item?.CarProductionDate.ToString("d")</Badge>
        <Badge Color="Color.Secondary">@Item?.Mileage km</Badge>
        <Badge Color="Color.Secondary">@Item?.Displacement cm3</Badge>
        <Badge Color="Color.Secondary">@Item?.Fuel.ToString()</Badge>
        <Badge Color="Color.Secondary">@Item?.Location</Badge>
    </div>
</div>
